# Maintainer: Deepak Meena <notwho53@gmail.com>
pkgbase=libmce-glib
pkgname=(
	'libmce-glib'
	'libmce-glib-dev'
)
pkgver=1.0.44
pkgrel=1
pkgdesc="Client library for mce"
arch=('aarch64')
url="https://github.com/sailfishos/libmce-glib.git"
license=('custom')
makedepends=('glib2-devel' 'libglibutil-dev' 'mce-dev')
source=("git+${url}")
sha256sums=('SKIP')

build() {
	cd $srcdir/$pkgbase
	make KEEP_SYMBOLS=1 release pkgconfig
}

package_libmce-glib() {
	cd $srcdir/$pkgbase
	make install DESTDIR="${pkgdir}"
}

package_libmce-glib-dev() {
	depends=('libmce-glib')
	cd $srcdir/$pkgbase
	make install-dev DESTDIR="${pkgdir}"
	rm $pkgdir/usr/lib/libmce-glib.so.*
}
