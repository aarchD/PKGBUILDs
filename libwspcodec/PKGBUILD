# Maintainer: Deepak Meena <notwho53@gmail.com>
pkgbase=libwspcodec
pkgname=(
	'libwspcodec'
	'libwspcodec-dev'
)
pkgver=2.2.6
pkgrel=1
pkgdesc="WSP encoder and decoder library"
arch=('aarch64')
url="https://github.com/sailfishos/libwspcodec.git"
license=('custom')
makedepends=('glib2-devel')
source=("git+${url}")
sha256sums=('SKIP')

build() {
	cd $srcdir/$pkgbase
	make KEEP_SYMBOLS=1 release pkgconfig
}

package_libwspcodec() {
	depends=('glib2')
	cd $srcdir/$pkgbase
	make install DESTDIR="${pkgdir}"
}

package_libwspcodec-dev() {
	depends=('libwspcodec' 'glib2-devel')
	cd $srcdir/$pkgbase
	make install-dev DESTDIR="${pkgdir}"
	rm $pkgdir/usr/lib/libwspcodec*.so{,.*}
}
